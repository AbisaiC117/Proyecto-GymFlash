<Window x:Class="GymFlash.View.PantallaAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymFlash.View"
        mc:Ignorable="d"
        Title="Panel de Administrador" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Background="#8B0000" Height="62" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,10">
                <StackPanel.Resources>
                    <Style x:Key="MenuButtonStyle" TargetType="Button">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Margin" Value="20,0,0,0"/>
                        <Setter Property="Padding" Value="0,0,0,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <Border Background="#8B0000" Height="50">
                    <DockPanel>
                        <TextBlock Text="GymFlash" FontWeight="Bold" FontSize="22"
                   Foreground="White" Margin="15,0" VerticalAlignment="Center" />
                        <StackPanel Orientation="Horizontal" Width="361" DockPanel.Dock="Left">
                            <Button Content="Inicio" Click="Button_Inicio_Click" Style="{StaticResource MenuButtonStyle}" />
                            <Button Content="Membresías" Click="Button_Membresia_Click" Style="{StaticResource MenuButtonStyle}" />
                            <Button Content="Rutinas" Click="Button_Rutinas_Click" Style="{StaticResource MenuButtonStyle}" />
                            <Button Content="Perfil" Click="Button_Perfil_Click" Style="{StaticResource MenuButtonStyle}" />
                            <Button Content="Tienda" Click="Button_Tienda_Click" Style="{StaticResource MenuButtonStyle}" />
                            <Button Content="Cerrar Sesión" Click="CerrarSesion_Click" Style="{StaticResource MenuButtonStyle}" />
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Mensaje de Bienvenida -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,60">
                <Label x:Name="lblBienvenida" Content="BIENVENIDO ADMINISTRADOR" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="#8B0000"
                       HorizontalAlignment="Center"/>
                <TextBlock Text="Panel de control principal" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Botones de Administración -->
            <UniformGrid Grid.Row="1" Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Botón Administrar Rutinas -->
                <Button Content="ADMINISTRAR RUTINAS" 
                        Width="300" 
                        Height="120" 
                        Margin="20"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Click="Button_AdministrarRutinas_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#8B0000"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A52A2A"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Botón Gestionar Administradores -->
                <Button Content="GESTIONAR ADMINISTRADORES" 
                        Width="300" 
                        Height="120" 
                        Margin="20"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Click="Button_GestionarAdministradores_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </UniformGrid>
        </Grid>

        <!-- Pie de página -->
        <DockPanel Grid.Row="2" Background="#8B0000" Height="40">
            <TextBlock Text="Contacto - Condiciones de Uso - Ayuda" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>