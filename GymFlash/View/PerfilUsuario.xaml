<Window x:Class="GymFlash.View.PerfilUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Perfil de Usuario" Height="717" Width="640"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid>
        <!-- Menú superior -->
        <DockPanel Background="#7A1B1B" Height="40" VerticalAlignment="Top">
            <TextBlock Text="Huevos" FontWeight="Bold" Foreground="White" Margin="10,0" VerticalAlignment="Center" />
            <TextBlock Text="leche" Margin="80,0,0,0" Foreground="#CCAAAA" VerticalAlignment="Center" />
            <TextBlock Text="Rutinas" Margin="170,0,0,0" Foreground="#CCAAAA" VerticalAlignment="Center" />
            <TextBlock Text="Perfil" Margin="250,0,0,0" Foreground="White" VerticalAlignment="Center" TextDecorations="Underline"/>
        </DockPanel>

        <!-- Contenido principal -->
        <StackPanel Margin="0,40,-18,28">

            <!-- Título -->
            <TextBlock Text="Perfil de usuario" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock Text="GYM" HorizontalAlignment="Center" FontSize="12" Margin="0,0,0,10"/>

            <!-- Imagen del gimnasio -->
            <Grid Height="160">
                <Image Source="Images/PerfilDeUsuario/gym_background.png" Stretch="Fill"/>
                <TextBlock Text="FOTOGRAFIA TOMADA EN GYM FLASH" Foreground="White"
                           FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10"/>
                <TextBlock Text="Team" Foreground="White" FontWeight="Bold" FontSize="14"
                           HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10"/>
                <Border Background="#D9D9D9" CornerRadius="5" Padding="5" HorizontalAlignment="Left" Margin="55,0,0,10"
                        VerticalAlignment="Bottom">
                    <TextBlock Text="GYM Flash" FontWeight="Bold" FontSize="14"/>
                </Border>
            </Grid>

            <!-- Foto de perfil y correo -->
            <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                <Image Source="Images/PerfilDeUsuario/user_photo.png" Width="80" Height="80" Margin="10"/>
                <StackPanel Margin="10,25,0,0">
                    <TextBlock Text="abisaicordovadevora9186@gmail.com" FontWeight="Bold" FontSize="14"/>
                </StackPanel>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Editar perfil" Margin="5" Padding="10,5" Click="EditarPerfil_Click"/>

                <Button Content="Compartir perfil" Margin="5" Padding="10,5" Click="CompartirPerfil_Click"/>

                <Button Content="+" Width="30" Height="30" Margin="10,0"/>
            </StackPanel>

            <!-- Datos -->
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Nombre -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre" Margin="44,5,275,5" Grid.ColumnSpan="2"/>
                <TextBox Grid.Row="0" Text="Abisai" Margin="99,5,220,5" Grid.ColumnSpan="2"/>

                <!-- Apellido paterno -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Paterno" Margin="44,5,275,5" Grid.ColumnSpan="2"/>
                <TextBox Grid.Row="1" Text="Cordova" Margin="99,4,220,5" Grid.ColumnSpan="2"/>

                <!-- Apellido materno -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Materno" Margin="44,6,275,4" Grid.ColumnSpan="2"/>
                <TextBox Grid.Row="2" Text="Devora" Margin="99,6,220,4" Grid.ColumnSpan="2"/>

                <!-- Edad, peso, altura, IMC -->
                <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                    <StackPanel Margin="5">
                        <TextBlock Text="Edad" RenderTransformOrigin="-1.267,0.72"/>
                        <TextBox Width="50" Text="19" RenderTransformOrigin="9.587,-1.735"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Peso"/>
                        <TextBox Width="60" Text="98.7"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Altura"/>
                        <TextBox Width="60" Text="1.75"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="IMC"/>
                        <TextBox Width="60" Text="38%"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Membresía y vigencia -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <TextBlock Text="Membresía:" FontWeight="Bold" />
                <TextBlock Text=" PREMIUM" Margin="5,0" />
                <TextBlock Text="Vigencia:" FontWeight="Bold" Margin="10,0"/>
                <TextBlock Text="12/05/2025" Margin="5,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Pie de página -->
        <DockPanel Background="#7A1B1B" Height="30" VerticalAlignment="Bottom">
            <TextBlock Text="Contacto" Foreground="White" Margin="10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Condiciones de uso" Foreground="White" Margin="90,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="Ayuda" Foreground="White" Margin="220,0,0,0" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
