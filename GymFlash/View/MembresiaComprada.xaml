<Window x:Class="GymFlash.View.MembresiaComprada"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="¡Membresía Comprada!" Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFFAFAFA">
    <Grid>
        <Border CornerRadius="15" Background="White" Padding="20" Margin="30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="¡Felicidades!" 
                           FontSize="30" 
                           FontWeight="Bold" 
                           Foreground="#FF2E8B57" 
                           HorizontalAlignment="Center" 
                           Margin="0,10"/>
                <TextBlock Text="Tu membresía ha sido comprada exitosamente." 
                           FontSize="18" 
                           TextAlignment="Center"
                           Margin="0,10"/>
                <Button Content="Cerrar" Width="150" Height="40" Margin="0,20"
                        Background="#FF2E8B57" Foreground="White" FontWeight="Bold"
                        Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
