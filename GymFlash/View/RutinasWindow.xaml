<Window x:Class="GymFlash.RutinasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Title="Rutinas" Height="848" Width="1000" Background="White" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Padding" Value="0,0,0,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="NormalButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Padding" Value="0,0,0,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel Margin="0,0,0,-6">
        <!-- Barra de navegación superior -->
        <Border Background="#7B0000" Height="50" DockPanel.Dock="Top">
            <DockPanel>
                <TextBlock Text="GymFlash" FontWeight="Bold" FontSize="22"
                           Foreground="White" Margin="15,0" VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" Width="361" DockPanel.Dock="Left">
                    <Button Content="Inicio" Click="Inicio_Click" Style="{StaticResource NormalButtonStyle}" />
                    <Button Content="Membresías" Click="Membresias_Click" Style="{StaticResource NormalButtonStyle}" />
                    <Button Content="Perfil" Click="Perfil_Click" Style="{StaticResource NormalButtonStyle}" />
                    <Button Content="Rutinas" Click="Rutinas_Click" Style="{StaticResource MenuButtonStyle}" />
                    <Button Content="Tienda" Click="Tienda_Click" Style="{StaticResource NormalButtonStyle}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Contenido principal -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="690" Width="1016">
            <StackPanel Margin="30">
                <TextBlock Text="Nuestras Rutinas" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0 20 0 10" HorizontalAlignment="Center"/>
                <TextBlock Text="Programas personalizados para cada objetivo y nivel de experiencia." FontSize="16" HorizontalAlignment="Center" Foreground="Gray" Margin="0 0 0 30"/>

                <UniformGrid Columns="2" Rows="3" Margin="0 0 0 20" Height="898">
                    <!-- Rutina 1 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Margin="10" Padding="10" Background="#FAFAFA">
                        <StackPanel>
                            <Image Source="Images/Rutinas/image_png.png" Height="182" Stretch="UniformToFill" Margin="0 0 0 10" Width="331"/>
                            <TextBlock Text="Rutina para Tronco" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Fortalece espalda, hombros y zona media con peso muerto, dominadas y planchas. Mejora postura, fuerza funcional y estabilidad del torso." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444"/>
                        </StackPanel>
                    </Border>

                    <!-- Rutina 2 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Margin="10" Padding="10" Background="#FAFAFA">
                        <StackPanel>
                            <Image Source="Images\Rutinas\rutina_pecho.jpg" Height="183" Stretch="UniformToFill" Margin="0 0 0 10" Width="321"/>
                            <TextBlock Text="Rutina para Pecho" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Incrementa masa muscular con press de banca, aperturas y fondos. Ideal para quienes buscan volumen y definición en el torso superior." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444"/>
                        </StackPanel>
                    </Border>

                    <!-- Rutina 3 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Margin="10" Padding="10" Background="#FAFAFA">
                        <StackPanel>
                            <Image Source="Images/Rutinas/pierna.jpg" Height="135" Stretch="UniformToFill" Margin="0 0 0 10" Width="334"/>
                            <TextBlock Text="Rutina para Pierna" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Desarrolla fuerza en tren inferior con sentadillas, peso muerto rumano y desplantes. Mejora equilibrio y potencia atlética." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444"/>
                        </StackPanel>
                    </Border>

                    <!-- Rutina 4 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Margin="10" Padding="10" Background="#FAFAFA">
                        <StackPanel>
                            <Image Source="Images/Rutinas/fullBody.jpg" Height="132" Stretch="UniformToFill" Margin="0 0 0 10" Width="331"/>
                            <TextBlock Text="Rutina Full Body" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Entrena todo el cuerpo en una sola sesión. Ideal para principiantes o entrenamiento de mantenimiento 2-3 veces por semana." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444" Width="386" Height="38"/>
                        </StackPanel>
                    </Border>


                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>

