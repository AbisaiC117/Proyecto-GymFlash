<Window x:Class="GymFlash.RutinasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rutinas" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="White">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Padding" Value="0,0,0,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NormalButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Padding" Value="0,0,0,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Barra superior -->
        <Border Background="#7B0000" Height="50" DockPanel.Dock="Top">
            <DockPanel>
                <TextBlock Text="GymFlash" FontWeight="Bold" FontSize="22"
                           Foreground="White" Margin="15,0" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="20,0,0,0" Height="28" Width="1736">
                    <Button Content="Inicio" Click="Inicio_Click" Style="{StaticResource NormalButtonStyle}" />
                    <Button Content="Membresías" Click="Membresias_Click" Style="{StaticResource NormalButtonStyle}" />
                    <Button Content="Rutinas" Click="Rutinas_Click" Style="{StaticResource MenuButtonStyle}" />
                    <Button Content="Perfil" Click="Perfil_Click" Style="{StaticResource NormalButtonStyle}" />
                    <Button Content="Tienda" Click="Tienda_Click" Style="{StaticResource NormalButtonStyle}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Contenido -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Nuestras Rutinas" FontSize="30" FontWeight="Bold" Foreground="#333" Margin="0 20 0 10" HorizontalAlignment="Center"/>
                <TextBlock Text="Programas personalizados para cada objetivo y nivel de experiencia." FontSize="16" HorizontalAlignment="Center" Foreground="Gray" Margin="0 0 0 30"/>

                <WrapPanel HorizontalAlignment="Center" ItemWidth="460" ItemHeight="Auto" Margin="0 0 0 20">
                    <!-- Cada tarjeta de rutina -->
                    <Border Width="440" Margin="10" Padding="15" Background="#FAFAFA" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10">
                        <StackPanel>
                            <Image Source="Images/Rutinas/image_png.png" Height="180" Stretch="UniformToFill" Margin="0 0 0 10"/>
                            <TextBlock Text="Rutina para Tronco" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Fortalece espalda, hombros y zona media con peso muerto, dominadas y planchas." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444"/>
                            <Button Content="Generar PDF" 
                                    Background="#7B0000" 
                                    Foreground="White" 
                                    Padding="10 5"
                                    Margin="0 10 0 0"
                                    HorizontalAlignment="Left"
                                    Click="GenerarPDF_Click"
                                    Tag="ID_RUTINA_TRONCO"/>
                        </StackPanel>
                    </Border>

                    <Border Width="440" Margin="10" Padding="15" Background="#FAFAFA" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10">
                        <StackPanel>
                            <Image Source="Images/Rutinas/pierna.jpg" Height="180" Stretch="UniformToFill" Margin="0 0 0 10"/>
                            <TextBlock Text="Rutina para Pierna" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Desarrolla fuerza en tren inferior con sentadillas, peso muerto rumano y desplantes." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444"/>
                            <Button Content="Generar PDF" 
                                    Background="#7B0000" 
                                    Foreground="White" 
                                    Padding="10 5"
                                    Margin="0 10 0 0"
                                    HorizontalAlignment="Left"
                                    Click="GenerarPDF_Click"
                                    Tag="ID_RUTINA_PIERNA"/>
                        </StackPanel>
                    </Border>

                    <Border Width="440" Margin="10" Padding="15" Background="#FAFAFA" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10">
                        <StackPanel>
                            <Image Source="Images/Rutinas/rutina_pecho.jpg" Height="180" Stretch="UniformToFill" Margin="0 0 0 10"/>
                            <TextBlock Text="Rutina para Pecho" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Incrementa masa muscular con press de banca, aperturas y fondos." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444"/>
                            <Button Content="Generar PDF" 
                                    Background="#7B0000" 
                                    Foreground="White" 
                                    Padding="10 5"
                                    Margin="0 10 0 0"
                                    HorizontalAlignment="Left"
                                    Click="GenerarPDF_Click"
                                    Tag="ID_RUTINA_PECHO"/>
                        </StackPanel>
                    </Border>

                    <Border Width="440" Margin="10" Padding="15" Background="#FAFAFA" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10">
                        <StackPanel>
                            <Image Source="Images/Rutinas/fullBody.jpg" Height="180" Stretch="UniformToFill" Margin="0 0 0 10"/>
                            <TextBlock Text="Rutina Full Body" FontSize="20" FontWeight="Bold" Foreground="#7B0000"/>
                            <TextBlock Text="Entrena todo el cuerpo en una sola sesión. Ideal para principiantes o mantenimiento." TextWrapping="Wrap" Margin="0 5 0 0" Foreground="#444"/>
                            <Button Content="Generar PDF" 
                                    Background="#7B0000" 
                                    Foreground="White" 
                                    Padding="10 5"
                                    Margin="0 10 0 0"
                                    HorizontalAlignment="Left"
                                    Click="GenerarPDF_Click"
                                    Tag="ID_RUTINA_FULLBODY"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>

