<Window x:Class="GymFlash.View.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gym Flash" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen" Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>

            <!-- Barra superior -->
            <DockPanel Background="#8B0000" Height="60" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                    <Button Content="Inicio" Foreground="White" Background="Transparent" BorderBrush="Transparent" FontWeight="Bold" Click="Membresia_Button" />
                    <Button Content="Membresías" Foreground="White" Background="Transparent" BorderBrush="Transparent" FontWeight="Bold" Margin="20,0,0,0" Click="Membresia_Button"/>
                    <Button Content="Rutinas" Foreground="White" Background="Transparent" BorderBrush="Transparent" FontWeight="Bold" Margin="20,0,0,0"/>
                    <Button Content="Mi ID" Foreground="White" Background="Transparent" BorderBrush="Transparent" FontWeight="Bold" Margin="20,0,0,0"/>
                </StackPanel>
            </DockPanel>

            <!-- Imagen principal -->
            <Image Source="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b" Height="300" Stretch="Fill"/>
            <TextBlock Text="Gym Flash" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
            <TextBlock Text="1% mejores cada día" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Button Content="INSCRÍBEME" Width="120" Height="30" HorizontalAlignment="Center" Background="#800000" Foreground="White"/>

            <!-- Nuestro equipo -->
            <TextBlock Text="Nuestro equipo" FontSize="24" FontWeight="Bold" Margin="20,30,0,10"/>
            <UniformGrid Columns="3" Margin="10">
                <StackPanel Margin="10">
                    <Image Source="https://images.unsplash.com/photo-1599058917212-d750089bc65b" Height="150" Stretch="Fill"/>
                    <TextBlock Text="Anastase Margos" FontWeight="Bold"/>
                    <TextBlock Text="Trainer Ms. Olympia"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Image Source="https://images.unsplash.com/photo-1594737625785-c8aa03f7f5a0" Height="150" Stretch="Fill"/>
                    <TextBlock Text="Karla Souza" FontWeight="Bold"/>
                    <TextBlock Text="Personal Trainer desde 2014"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Image Source="https://images.unsplash.com/photo-1598188305693-f58c80c0d539" Height="150" Stretch="Fill"/>
                    <TextBlock Text="Hayley Kim" FontWeight="Bold"/>
                    <TextBlock Text="Especialista en calistenia"/>
                </StackPanel>
            </UniformGrid>

            <!-- Mapa -->
            <TextBlock Text="UBICACIÓN" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
            <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e0/Map_example.png/640px-Map_example.png"
                   Height="300" Margin="20" Stretch="UniformToFill"/>

            <!-- Reseñas -->
            <TextBlock Text="Reseñas" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBlock Text="¡La gente ama esto!" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <UniformGrid Columns="3" Margin="20">
                <StackPanel>
                    <TextBlock Text="Todas las máquinas están en excelente estado y el personal es super amable!" TextWrapping="Wrap"/>
                    <TextBlock Text="★★★★★" Foreground="Gold" FontSize="20"/>
                    <TextBlock Text="Flavio Uriel" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="¡Me encanta la música que ponen y el estacionamiento es muy amplio!" TextWrapping="Wrap"/>
                    <TextBlock Text="★★★★★" Foreground="Gold" FontSize="20"/>
                    <TextBlock Text="Emiliana DSM" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="¡A este precio, nadie se compara; qué servicio tan completo!" TextWrapping="Wrap"/>
                    <TextBlock Text="★★★★★" Foreground="Gold" FontSize="20"/>
                    <TextBlock Text="Abisaí Cordova" FontStyle="Italic"/>
                </StackPanel>
            </UniformGrid>

        </StackPanel>
    </ScrollViewer>
</Window>
