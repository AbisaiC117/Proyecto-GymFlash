<Window x:Class="GymFlash.View.EditarPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Perfil" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Editar Perfil de Usuario" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Nombre -->
            <TextBlock Text="Nombre"/>
            <TextBox x:Name="txtNombre" Text="Abisai" Margin="0,5"/>

            <!-- Apellido Paterno -->
            <TextBlock Text="Paterno"/>
            <TextBox x:Name="txtPaterno" Text="Cordova" Margin="0,5"/>

            <!-- Apellido Materno -->
            <TextBlock Text="Materno"/>
            <TextBox x:Name="txtMaterno" Text="Devora" Margin="0,5"/>

            <!-- Edad -->
            <TextBlock Text="Edad"/>
            <TextBox x:Name="txtEdad" Text="19" Margin="0,5"/>

            <!-- Peso -->
            <TextBlock Text="Peso"/>
            <TextBox x:Name="txtPeso" Text="98.7" Margin="0,5"/>

            <!-- Altura -->
            <TextBlock Text="Altura"/>
            <TextBox x:Name="txtAltura" Text="1.75" Margin="0,5"/>

            <!-- IMC -->
            <TextBlock Text="IMC"/>
            <TextBox x:Name="txtIMC" Text="38%" Margin="0,5"/>

    

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Guardar" Width="100" Margin="5" Click="Guardar_Click" Background="GreenYellow"/>
                <Button Content="Cancelar" Width="100" Margin="5" Click="Cancelar_Click" Background="IndianRed"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
