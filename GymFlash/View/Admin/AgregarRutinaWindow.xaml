<Window x:Class="GymFlash.View.PantallaAdmin.AgregarRutinaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Rutina" Height="450" Width="400" WindowStartupLocation="CenterScreen"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Agregar Nueva Rutina"
                   FontSize="20" FontWeight="Bold" Foreground="#7B0000"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,0,0,10">
            <TextBlock Text="Nombre:"/>
            <TextBox x:Name="txtNombre" Margin="0,5,0,10"/>

            <TextBlock Text="Descripción:"/>
            <TextBox x:Name="txtDescripcion" Margin="0,5,0,10" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>

            <TextBlock Text="ID del Entrenador:"/>
            <TextBox x:Name="txtIdEntrenador" Margin="0,5,0,10"/>

            <TextBlock Text="URL de Imagen:"/>
            <TextBox x:Name="txtImagenURL" Margin="0,5,0,10"/>

            <Button Content="Agregar Rutina"
                    Background="#7B0000"
                    Foreground="White"
                    Click="AgregarRutina_Click"
                    Height="40" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
