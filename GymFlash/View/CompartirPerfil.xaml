<Window x:Class="GymFlash.View.CompartirPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compartir Perfil" Height="250" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#2E2E2E" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize">

    <Grid>
        <!-- Botón de cerrar -->
        <Button Content="✕" FontSize="16" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                Click="Cerrar_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Compartir Perfil" FontSize="20" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <UniformGrid Columns="3" HorizontalAlignment="Center">
                <!-- WhatsApp -->
                <StackPanel HorizontalAlignment="Center">
                    <Button Background="Transparent" BorderBrush="Transparent" Click="CompartirWhatsApp_Click">
                        <Image Source="Images/CompartirPerfil/guasapLogo.jpg" Width="50" Height="50"/>
                    </Button>
                    <TextBlock Text="WhatsApp" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Messenger -->
                <StackPanel HorizontalAlignment="Center">
                    <Button Background="Transparent" BorderBrush="Transparent" Click="CompartirMessenger_Click">
                        <Image Source="Images/CompartirPerfil/messenger.png" Width="50" Height="50"/>
                    </Button>
                    <TextBlock Text="Messenger" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Gmail -->
                <StackPanel HorizontalAlignment="Center">
                    <Button Background="Transparent" BorderBrush="Transparent" Click="CompartirGmail_Click">
                        <Image Source="Images/CompartirPerfil/gmail.png" Width="50" Height="50"/>
                    </Button>
                    <TextBlock Text="Gmail" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
