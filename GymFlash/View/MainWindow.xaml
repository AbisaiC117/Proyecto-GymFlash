<Window x:Class="GymFlash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio" Height="300" Width="350" WindowStartupLocation="CenterScreen"
        Background="#f0f0f0" ResizeMode="NoResize">

    <DockPanel LastChildFill="True">
        <Border Background="DarkRed" Height="29" DockPanel.Dock="Top">
            <TextBlock Text="GymFlash" Foreground="White" FontSize="20" 
                       FontWeight="Bold" VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        </Border>
        <Grid>
            <Border CornerRadius="10" Background="White" Padding="20" Margin="20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Bienvenido a GymFlash" 
                               FontSize="18" FontWeight="Bold" 
                               Margin="0 0 0 20" 
                               HorizontalAlignment="Center"/>

                    <Button Content="Login" Width="180" Height="40" Margin="0 0 0 10"
                            Click="Login_Click"
                            Background="#0078D7" Foreground="White"
                            FontWeight="SemiBold" BorderBrush="#005a9e" BorderThickness="1"
                            Cursor="Hand"/>

                    <Button Content="Sign Up" Width="180" Height="40"
                            Click="Signup_Click"
                            Background="#28a745" Foreground="White"
                            FontWeight="SemiBold" BorderBrush="#1e7e34" BorderThickness="1"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
